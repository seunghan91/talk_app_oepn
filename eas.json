{
  "cli": {
    "version": ">= 5.4.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "cache": {
        "disabled": true
      },
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "channel": "production",
      "android": {
        "credentialsSource": "remote",
        "gradleCommand": ":app:bundleRelease"
      },
      "ios": {
        "credentialsSource": "remote",
        "buildConfiguration": "Release",
        "distribution": "store"
      }
    }
  },
  "submit": {
    "development": {
      "ios": {
        "appleId": "${APPLE_ID}",
        "ascAppId": "${APPLE_ASC_APP_ID}",
        "appleTeamId": "${APPLE_TEAM_ID}"
      }
    },
    "production": {
      "ios": {
        "appleId": "${APPLE_ID}",
        "ascAppId": "${APPLE_ASC_APP_ID}",
        "appleTeamId": "${APPLE_TEAM_ID}"
      },
      "android": {
        "track": "internal"
      }
    }
  }
}
